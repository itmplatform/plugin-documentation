    "details": {
        "title": {
            "en": "E3. Overdue task email",
            "es": "E3. Alerta de tarea vencidas",
            "pt": "E3. Relatório de tarefa atrasada"
        },
        "version": "0.0.1",
        "shortDescription": {
            "en": "Example 3. Sends an email per each overdue task of a project.",
            "es": "Ejemplo 3. Envía un correo electrónico por cada tarea atrasada de un proyecto.",
            "pt": "Exemplo 3. Envia um e-mail por cada tarefa atrasada de um projeto."
        }
    },
    "features": [
        {
            "trigger": "scheduler",
            "async": true,
            "actions": [
                {
                    "action": "restcall",
                    "url": "http://api.itmplatform.com/testsmarter/login/{{ config.apikey }}",
                    "method": "POST",
                    "description": "Login with apikey",
                    "output": "logininfo",
                    "payload": "",
                    "dataType": "application/json"
                },
                {
                    "action": "restcall",
                    "url": "http://api.itmplatform.com/v2/testsmarter/Projects/{{ config.projectId }}",
                    "method": "POST",
                    "description": "Get project detail",
                    "payload": "{\"Columns\": {\"$in\": [\"Id\",\"Name\",\"Jiraid\",\"Team\"] } }",
                    "output": "project",
                    "dataType": "application/json",
                    "token": "{{ logininfo.Token }}"
                },
                {
                    "action": "restcall",
                    "url": "http://api.itmplatform.com/v2/testsmarter/Projects/{{ config.projectId }}/Tasks/search",
                    "method": "POST",
                    "description": "Get all tasks from project",
                    "payload": "{\"Columns\": { \"$in\": [ \"Id\", \"ProjectId\", \"Name\", \"EndDate\", \"Team.Managers\" ] }, \"filter\": { \"EndDate\": { \"$gte\": \"{{ DateTime.Now \"yyyy-MM-dd\" }}\" } } }",
                    "output": "tasks",
                    "dataType": "application/json",
                    "token": "{{ logininfo.Token }}"
                },
                {
                    "action": "loop",
                    "loop": {
                        "var": "tasks.list",
                        "output": "singletask",
                        "condition": "Convert.ToString(project.Team.Managers).length > 0 && singletask.EndDate != null"
                    },
                    "actions": [
                        {
                            "action": "email",
                            "to": "{{ project.Team.Managers.0.EmailAddress }}",
                            "subject": "Test Scheduler Mail",
                            "body": "<html>{{ singletask.Name }} is due on {{ date singletask.EndDate \"MM-dd-yyyy\" }}.</html>"
                        }
                    ]
                }
            ]
        }
    ],
